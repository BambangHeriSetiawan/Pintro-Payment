<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/helveticaneuelptro_roman</item>
    </style>
    <style name="AppTheme.White" parent="AppTheme">
        <item name="colorAccent">@color/white</item>
    </style>
    <style name="AppTheme.Primary" parent="AppTheme">
        <item name="colorAccent">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Text.Title.Primary" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/carnas_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>
    <style name="AppTheme.Text.Title.Accent" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/carnas_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>
    <style name="AppTheme.Text.Title.White" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/helveticaneuelptro_roman</item>
    </style>

    <style name="AppTheme.Text.Content.Primary" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:fontFamily">@font/carnas_regular</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="AppTheme.Text.Content" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:fontFamily">@font/carnas_regular</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:padding">@dimen/margin_small</item>
    </style>
    <style name="AppTheme.Text.Content.White" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:fontFamily">@font/carnas_regular</item>
    </style>

    <style name="Widget.MyApp.MyButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.MyApp.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@color/white</item>

    </style>
    <style name="Widget.MyApp.Button.Primary" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@color/white</item>
    </style>



    <style name="MyMaterialInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorAccent">@color/white</item>
        <item name="android:layout_margin">@dimen/margin_medium</item>
        <item name="android:fontFamily">@font/carnas_regular</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="MyMaterialInputText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/carnas_regular</item>
        <item name="colorAccent">@color/white</item>


        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyMaterialButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/carnas_medium</item>
    </style>

    <style name="MyMaterialInputTextAccent" parent="Widget.AppCompat.EditText">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="MyMaterialInputLayoutAccent" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="MainText">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/carnas_medium</item>
    </style>

    <style name="WhiteActionBar" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyTabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/white</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WhiteTextColorNormal" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PrimaryTextColorNormal" parent="AppTheme">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HelveticaPrimaryTextColorNormal" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:fontFamily">@font/helvetica_roman</item>
    </style>

    <style name="NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MyTextInputLayoutStyleWhite" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:colorFocusedHighlight">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyEditTextStyleWhite" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>

    </style>

    <style name="MyTextInputLayoutStylePrimary" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:colorFocusedHighlight">@color/gray</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="MyCheckBoxStyle" parent="AppTheme">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonTint">@color/colorPrimary</item>
    </style>
    <style name="MyEditTextStylePrimary" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>


    </style>
    <style name="MyProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorButtonNormal">#f50057</item>
        <item name="colorControlActivated">#33691e</item>
        <item name="colorControlHighlight">#ff6d00</item>

        <item name="android:minWidth">200dp</item>
    </style>

    <style name="AppTheme.Calender" parent="AppTheme">
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorPrimaryLight</item>
        <item name="colorAccent">#ff6d00</item>

    </style>

    <!--TextView Style-->
    <style name="PrimaryTextView" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/helvetica_roman</item>
    </style>


    <style name="PrimaryTextView.Medium" parent="PrimaryTextView">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="PrimaryTextView.Large" parent="PrimaryTextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PrimaryTextView.Title" parent="PrimaryTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:color">@color/black20</item>
    </style>
    <style name="PrimaryTextView.SubTitle" parent="PrimaryTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:color">@color/black20</item>
    </style>
    <style name="PrimaryTextView.Small" parent="PrimaryTextView">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:color">@color/black20</item>
    </style>


    <style name="MyAppearanceTextWhite" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
